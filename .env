# CliniCore Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=CliniCore
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
# For PostgreSQL (Production)
DATABASE_URL=postgresql://postgres:200113@localhost:5432/prontivus_db
DATABASE_URL_ASYNC=postgresql+asyncpg://postgres:200113@localhost:5432/prontivus_db

# For SQLite (Development)
USE_SQLITE=false
SQLITE_URL=sqlite:///./clinicore_offline.db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8080","https://clinicore.com"]

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Medical System
TISS_VERSION=3.05.00
DEFAULT_TIMEZONE=America/Sao_Paulo

# Licensing
LICENSE_SIGNATURE_KEY=your-license-signature-key
OFFLINE_GRACE_PERIOD_HOURS=72

# Monitoring (Optional)
SENTRY_DSN=
